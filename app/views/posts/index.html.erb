<h1 class="text-center">All Requests for Buddies</h1>

<div class="row">
  <h3 class="col-md-2 col-md-offset-1"> Start </h3>
  <h3 class="col-md-2"> End </h3>
  <h3 class="col-md-2"> Location </h3>
  <h3 class="col-md-2"> Description </h3>
  <h3 class="col-md-2"> Actions </h3>
</div>

<% @posts.each do |post| %>
  <div class="row">
    <div class="col-md-2 col-md-offset-1"> <%= post.start.to_formatted_s(:long_ordinal) %> </div>
    <div class="col-md-2"> <%= post.end.to_formatted_s(:long_ordinal) %> </div>
    <div class="col-md-2"> <%= post.location %> </div>
    <div class="col-md-2"> <%= post.description %> </div>
    <div class="col-md-2"> 
      <%= link_to 'Show', post, html: {class: "btn btn-primary"} %>
      <%= link_to 'Edit', edit_post_path(post) %>
      <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
<% end %>

<%= link_to 'New Post', new_post_path %>
