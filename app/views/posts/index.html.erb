<h1 class="text-center">All Posts</h1>

<table class="col-md-12 table-striped" id="posts">
  <thead>
      <tr>
        <th class="text-center"> Start Date</h3>
        <th class="text-center"> End Date</h3>
        <th class="text-center"> Start Location</h3>
        <th class="text-center"> End Location</h3>
        <th class="text-center"> Actions </h3>
      </tr>
  </thead>
<tbody>
  <% @posts.each do |post| %>
      <tr>
        <td class="text-center"> <%= post.start_date.to_formatted_s(:date) %> </td>
        <td class="text-center"> <%= post.end_date.to_formatted_s(:date) %> </td>
        <td class="text-center"> <%= post.start_loc %> </td>
        <td class="text-center"> <%= post.end_loc %> </td>
        <td class="text-center"> <%= link_to 'More Info', post, class: "btn btn-primary btn-xs" %> </td>
      </tr>
  <% end %>
</tbody>
</table>

