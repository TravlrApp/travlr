<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    First Name: <%= f.text_field :first_name %>
  </div>
  <div class="field">
    Last Name: <%= f.text_field :last_name %>
  </div>
  <div class="field">
    Age: <%= f.number_field :age %>
  </div>
  <div class="field">
    Email: <%= f.email_field :email %>
  </div>
  <div class="field">
    Username: <%= f.text_field :user_name %>
  </div>
  <div class="field">
    Password (Must be 4-20 characters long): <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
